<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="bootstrap/js/bootstrap.min.js"></script>

  <title>Easy market lookup - <%= @lookups.collect {|l| l.itemname}.join(" , ") %></title>
</head>
<body>
    <div id="header" class="row-fluid">
         <div class="span4">
                <form id="form">
                    <b>paste me:</b>
                    <textarea name="paste" style="width: 342px; height: 42px;" rows="5"></textarea>
                    <input name="submit" type="submit" value="look up!">
                </form>
            </div>
        <div class="span4">
            <% if env["HTTP_EVE_TRUSTED"] and env["HTTP_EVE_TRUSTED"] == "No" %>
                <button type="button" onclick="CCPEVE.requestTrust('<%= request.url %>');">Request Trust</button>
            <% end %>
            
        </div>
    </div>
    <% @lookups.each do |lookup| %>
    
        <div id="header" class="row-fluid">
            <div class="span4">
                <span id="image">
                    <img id="icon" src="http://image.eveonline.com/Type/<%= lookup.typeId.to_s %>_64.png" onclick="CCPEVE.showInfo(<%= lookup.typeId.to_s %>)">
                    <b><%= lookup.itemname %></b>
                    <i class="icon-shopping-cart icon-2" style="margin-left: 25px;" onclick="CCPEVE.showMarketDetails(<%= lookup.typeId.to_s %>)"></i>
                </span>
            </div>    
        </div>
        
        <div class="row-fluid">
          
            <% lookup.stations.each_value do |market| %>
             <div class="span4">
                <table class="table table-condensed">
                  <caption> <%= market.station_name %></caption>
                  <thead>
                  <th>Volume</th>
                  <th>Price</th>
                  </thead>
                  <% market.sells[0..5].each do |order| %>
                      <tr>
                        <%= "<td>#{order.vol_remain}</td><td>#{order.price.format}</td>" %>
                      </tr>
                  <% end %>
                  <tr> <td> </td><td> </td></tr>
                  <tr> <td> </td><td style="color: <%= market.split_percent(1) > 5.0  ? "green" : "grey" %>;"><%= "#{market.split_percent(1)} %" %></td></tr>
                  <tr> <td> </td><td> </td></tr>
                  <% market.buys[0..5].each do |order| %>
                        <tr>
                          <%= "<td>#{order.vol_remain}</td><td>#{order.price.format}</td>" %>
                        </tr>
                  <% end %>
                  <tr>
                    <td><a href="http://eve-marketdata.com/price_check.php?step=Show&type_id=<%=lookup.typeId.to_s%>&region_id=10000002&solarsystem_id=&type=historytext" ><i class="icon-time"></i> history</a></td>
                    <td><a href="https://eve-central.com/home/quicklook.html?typeid=<%=lookup.typeId.to_s%>"><i class="icon-search"></i> EC</a></td>
                  </tr>
                </table>
              </div>

            <% end # of station iterator %>
         </div>   
         <br>
    <% end # of @lookups iteration %>

</body>

</html>